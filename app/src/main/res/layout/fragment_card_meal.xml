<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="wrap_content"

    android:layout_height="wrap_content"

    android:layout_margin="5dp"

    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:cardBackgroundColor="#FAFAFA">

        <LinearLayout
            android:id="@+id/layoutMeal"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/layout_bg"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/typeMeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageMeal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:text="Diner"

                android:textColor="@color/colorSecondaryDark"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nameMeal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/typeMeal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="Poulet curry"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <ImageView
            android:id="@+id/imageMeal"
            android:layout_width="300dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="-45dp"
            android:src="@drawable/poulet_curry" />


    </android.support.v7.widget.CardView>


</RelativeLayout>